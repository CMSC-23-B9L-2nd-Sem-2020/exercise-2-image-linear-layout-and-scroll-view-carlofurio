<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/image_margin</item>
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="char_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/char_text_size</item>
    </style>

    <style name="image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">266dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/image_margin</item>
        <item name="android:layout_marginBottom">@dimen/image_margin</item>
        <item name="android:contentDescription">@string/spongebob_characters</item>
    </style>

    <style name="desc_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingStart">@dimen/pad</item>
        <item name="android:paddingTop">@dimen/pad</item>
        <item name="android:paddingEnd">@dimen/pad</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/desc_text_size</item>
    </style>

</resources>
